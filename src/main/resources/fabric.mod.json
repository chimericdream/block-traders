{
    "schemaVersion": 1,
    "id": "blocktraders",
    "version": "${version}",
    "name": "BlockTraders",
    "description": "Adds more than two dozen new villagers which trade a huge variety of miniblocks for all your decorating needs.",
    "authors": [
        "chimericdream"
    ],
    "contact": {
        "homepage": "https://www.curseforge.com/minecraft/mc-mods/block-traders",
        "sources": "https://github.com/chimericdream/block-traders/"
    },
    "license": "MIT",
    "icon": "assets/blocktraders/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.chimericdream.blocktraders.BlockTradersMod"
        ],
        "client": [
            "com.chimericdream.blocktraders.BlockTradersClient"
        ],
        "modmenu": [
            "com.chimericdream.blocktraders.config.ModMenuIntegration"
        ]
    },
    "mixins": [
        "blocktraders.mixins.json"
    ],
    "accessWidener": "blocktraders.accesswidener",
    "depends": {
        "fabricloader": ">=0.14.7",
        "minecraft": "~1.19",
        "java": ">=17",
        "cloth-config": ">=7.0.65"
    },
    "recommends": {
        "modmenu": "*"
    }
